<div class="container main top-main">

  <div class="align-top"><%= render 'shared/flash_messages' %></div>

  <div class="row justify-content-center">
    <div class="top-message" style="text-align: center;">
      <h1>ウェブエンジニア面談練習アプリ</h1>
    </div>

    <div style="text-align: center;">
      <h2>面談動画パターン選択</h2>
      <% @patterns.each do |pattern| %>
        <div class="btn-group">
          <button type="button" class="btn btn-success" style="width: 50%; padding: 5px; margin: 10px;">
            <%= link_to "#{pattern.name}", movies_path(pattern), method: :get, class: "btn btn-block w-100" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
  
</div>
